<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SoapActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="47dp"
        android:layout_height="31dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="285dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your detergent"
            android:textColor="#8D011C"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- TIDE Section -->
    <ImageView
        android:id="@+id/backgroundTide"
        android:layout_width="178dp"
        android:layout_height="205dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/imageTide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/tidelogo"
        app:layout_constraintEnd_toEndOf="@id/backgroundTide"
        app:layout_constraintStart_toStartOf="@id/backgroundTide"
        app:layout_constraintTop_toTopOf="@id/backgroundTide" />

    <TextView
        android:id="@+id/textTide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="TIDE"
        android:textColor="#E74B28"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backgroundTide"
        app:layout_constraintTop_toBottomOf="@id/imageTide" />

    <!-- ARIEL Section -->

    <TextView
        android:id="@+id/priceTide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:text="₱15.00"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/backgroundTide"
        app:layout_constraintTop_toBottomOf="@id/imageTide" />

    <TextView
        android:id="@+id/weightTide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="   80g"
        android:textColor="#000000"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backgroundTide"
        app:layout_constraintTop_toBottomOf="@id/textTide" />

    <ImageView
        android:id="@+id/backgroundAriel"
        android:layout_width="178dp"
        android:layout_height="205dp"
        app:srcCompat="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/imageAriel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ariellogo"
        app:layout_constraintEnd_toEndOf="@id/backgroundAriel"
        app:layout_constraintStart_toStartOf="@id/backgroundAriel"
        app:layout_constraintTop_toTopOf="@id/backgroundAriel" />

    <TextView
        android:id="@+id/textAriel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="ARIEL"
        android:textColor="#378F26"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backgroundAriel"
        app:layout_constraintTop_toBottomOf="@id/imageAriel" />

    <!-- BREEZE Section -->
    <TextView
        android:id="@+id/priceAriel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:text="₱15.00"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/backgroundAriel"
        app:layout_constraintTop_toBottomOf="@id/imageAriel" />

    <TextView
        android:id="@+id/weightAriel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="   80g"
        android:textColor="#000000"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backgroundAriel"
        app:layout_constraintTop_toBottomOf="@id/textAriel" />

    <ImageView
        android:layout_width="182dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backgroundTide"
        android:layout_marginTop="16dp" />

    <!-- BREEZE Section -->

    <ImageView
        android:id="@+id/backgroundBreeze"
        android:layout_width="178dp"
        android:layout_height="205dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backgroundTide"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/imageBreeze"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/breezelogo"
        app:layout_constraintStart_toStartOf="@id/backgroundBreeze"
        app:layout_constraintTop_toTopOf="@id/backgroundBreeze" />

    <!-- SURF Section -->

    <TextView
        android:id="@+id/textBreeze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="BREEZE"
        android:textColor="#CCBF00"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backgroundBreeze"
        app:layout_constraintTop_toBottomOf="@id/imageBreeze" />

    <TextView
        android:id="@+id/priceBreeze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:text="₱21.00"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/backgroundBreeze"
        app:layout_constraintTop_toBottomOf="@id/imageBreeze" />

    <TextView
        android:id="@+id/weightBreeze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="80g"
        android:textColor="#000000"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backgroundBreeze"
        app:layout_constraintTop_toBottomOf="@id/textBreeze" />

    <ImageView
        android:id="@+id/backgroundSurf"
        android:layout_width="178dp"
        android:layout_height="205dp"
        app:srcCompat="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backgroundAriel"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/imageSurf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/surflogo"
        app:layout_constraintEnd_toEndOf="@id/backgroundSurf"
        app:layout_constraintStart_toStartOf="@id/backgroundSurf"
        app:layout_constraintTop_toTopOf="@id/backgroundSurf" />

    <TextView
        android:id="@+id/textSurf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="SURF"
        android:textColor="#921D25"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backgroundSurf"
        app:layout_constraintTop_toBottomOf="@id/imageSurf" />

    <TextView
        android:id="@+id/priceSurf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:text="₱10.00"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/backgroundSurf"
        app:layout_constraintTop_toBottomOf="@id/imageSurf" />

    <TextView
        android:id="@+id/weightSurf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="80g"
        android:textColor="#000000"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backgroundSurf"
        app:layout_constraintTop_toBottomOf="@id/textSurf" />

    <!-- 1/3 continue -->

    <TextView
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="68dp"
        android:text="1/3"
        android:textColor="#B4B4B4"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/buttonContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="68dp"
        android:text="Continue ➜"
        android:textColor="#8D011C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
